<% 
if !root_domain
  flash[:alert] = "Sign-up not permitted from a subdomain - quit mucking with the url"
else%>
<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

    <% if current_account %>
      <%= f.hidden_field :account_name, :value => current_account.name %>
    <% else%>
      <%= f.input :account_name, :label => "http://", :hint => ".thelatejar.com"%>
    <% end %>

<hr />

<h3>Account Holder</h3>
  <%= f.input :name %>

  <%= f.input :email %>

  <%= f.input :password %>

  <%= f.input :password_confirmation %>

  <%= f.submit 'Create Account' %>
<% end %>

<%= render :partial => "devise/shared/links" %>
<%end%>